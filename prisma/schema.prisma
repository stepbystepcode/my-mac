generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model App {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  icon        String
  url         String
  kind        AppKind  @default(GUI)
  category    String   @default("Desktop")
  summary     String   @default("")
  details     String   @default("")
  command     String?
}

enum AppKind {
  GUI
  CLI
}
